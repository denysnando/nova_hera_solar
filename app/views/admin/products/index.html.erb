<div class="page-header clearfix">
  <div class="pull-left">
    <h1><small>Lista de Produtos</small></h1>
  </div>
</div>
<% if flash[:notice].present? %>
  <div class="alert alert-success" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    <%= flash[:notice] %>
  </div>
<% end %>
<table class="table table-condensed table-bordered table-striped table-hover ">
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Número de Referência</th>
      <th>Valor</th>
      <th style="width: 30px;">Editar</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |p| %>
      <tr>
        <td><%=link_to p.id, admin_product_path(p) %></td>
        <td><%=link_to p.name, admin_product_path(p) %></td>
        <td><%=link_to p.description, admin_product_path(p) %></td>
        <td><%=link_to p.number_references, admin_product_path(p) %></td>
        <td><%=link_to number_to_currency(p.balance), admin_product_path(p) %></td>
        <td><%=link_to 'Editar', edit_admin_product_path(p) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <%= link_to 'Cadastrar Novo Produto', new_admin_product_path, :class => 'btn btn-primary'  %>
